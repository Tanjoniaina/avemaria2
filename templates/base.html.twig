<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Médical</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var sidebar = document.getElementById("sidebar");
            var wrapper = document.getElementById("wrapper");
            var toggleButton = document.getElementById("toggleSidebar");

            // Mettre la sidebar en mode réduit dès le chargement
            sidebar.classList.add("collapsed");
            wrapper.classList.add("collapsed");

            // Bouton pour ouvrir/fermer la sidebar
            toggleButton.addEventListener("click", function() {
                sidebar.classList.toggle("collapsed");
                wrapper.classList.toggle("collapsed");
            });
        });
    </script>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <style>
        /* Scrollbar personnalisée pour la sidebar */
        .sidebar::-webkit-scrollbar {
            width: 6px; /* Largeur de la scrollbar */
        }

        .sidebar::-webkit-scrollbar-track {
            background: transparent; /* Couleur de fond de la piste */
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: rgba(255, 255, 255, 0.5); /* Couleur de la barre */
            border-radius: 3px; /* Coins arrondis */
        }


        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .wrapper {
            display: flex;
            transition: all 0.3s ease;
        }

        .sidebar {
            width: 250px;
            background-color: #0b60b5;
            height: 100vh;
            transition: all 0.3s ease;
            overflow-y: auto;
            position: fixed;
            z-index: 1000;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: white;
            text-decoration: none;
        }

        .sidebar a i {
            font-size: 20px;
            width: 30px;
            text-align: center;
        }

        .sidebar a span {
            margin-left: 10px;
            white-space: nowrap;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        .sidebar.collapsed a span {
            opacity: 0;
            transform: translateX(-20px);
        }

        .content {
            margin-left: 250px;
            padding: 20px;
            flex: 1;
            transition: margin-left 0.3s ease;
        }

        .collapsed .content {
            margin-left: 70px;
        }

        .navbar {
            transition: all 0.3s ease;
        }

        .collapsed .navbar {
            margin-left: 70px;
        }

        .separator {
            border-top: 2px solid #ffffff;
            margin: 10px 0;
        }

        .sidebar h4 img {
            height: 40px;
        }

        .sidebar h4 span {
            vertical-align: middle;
            margin-left: 10px;
        }
    </style>
    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
    {% endblock %}


</head>
<body>
<nav class="navbar navbar-dark" style="background-color: #0b60b5;">
    <div class="container-fluid">
        <button class="btn btn-outline-light" id="toggleSidebar">
            <i class="bi bi-list"></i>
        </button>
        <span class="navbar-brand ms-3">Clinique Ave Maria</span>
    </div>
</nav>

<div class="wrapper" id="wrapper">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h4 class="text-center text-white py-3">
            <a href="{{ path('app_homepage') }}"><img src="{{ asset('images/logoavemaria.jpeg') }}" alt="Logo"></a>
        </h4>

        <div class="separator"></div>
        <a href="{{  path('app_homepage') }}"><i class="bi bi-gear"></i> <span>Admin</span></a>
        <a href="{{ path('app_accueil') }}"><i class="bi bi-house-door"></i> <span>Accueil</span></a>
        <a href="{{ path('app_prisedesparametres_index')}}"><i class="bi bi-heart-pulse"></i> <span>Prise de paramètre</span></a>
        <a href="{{ path('app_facturation_entity_facture_index') }}"><i class="bi-file-earmark-check"></i> <span>Facturation</span></a> <!-- Facturation -->
        <a href="{{ path('app_economat_entity_paiement_index') }}"><i class="bi bi-shop-window"></i> <span>Economat</span></a>
        <a href="{{ path('app_consultation_entity_ordonnance_index') }}"><i class="bi bi-calendar-check"></i> <span>Consultation</span></a>
        <a href="{{  path('app_pharmaciehomepage') }}"><i class="bi-capsule"></i> <span>Pharmacie</span></a>
        <a href="{{  path('app_pharmaciegros_entity_location_index') }}"><i class="bi-clipboard-plus"></i> <span>Service</span></a>

    </div>
    <div class="content" id="mainContent">
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </div>

</div>
</body>
</html>
