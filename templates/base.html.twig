<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Médical</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var sidebar = document.getElementById("sidebar");
            var wrapper = document.getElementById("wrapper");
            var toggleButton = document.getElementById("toggleSidebar");

            // Réduire la sidebar au chargement
            // sidebar.classList.add("collapsed");
            // wrapper.classList.add("collapsed");

            // Bouton ouverture/fermeture
            toggleButton.addEventListener("click", function() {
                sidebar.classList.toggle("collapsed");
                wrapper.classList.toggle("collapsed");
            });
        });
    </script>

    {% block javascripts %}

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

        <script>
            // Fonction générique d'initialisation DataTables
            function initDataTables(selector = '.datatable') {
                document.querySelectorAll(selector).forEach(function (table) {
                    new DataTable(table, {
                        language: {
                            url: "https://cdn.datatables.net/plug-ins/1.13.8/i18n/fr-FR.json"
                        },
                        pageLength: 10
                    });
                });
            }
        </script>
    {% endblock %}

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .wrapper {
            display: flex;
            transition: all 0.3s ease;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #0b60b5;
            height: calc(100vh - 53px); /* hauteur restante sous navbar */
            transition: all 0.3s ease;
            overflow-y: auto;
            position: fixed;
            top: 53px; /* commence juste sous le navbar */
            z-index: 1000;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: white;
            text-decoration: none;
        }

        .sidebar a i {
            font-size: 20px;
            width: 30px;
            text-align: center;
        }

        .sidebar a span {
            margin-left: 10px;
            white-space: nowrap;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        .sidebar.collapsed a span {
            opacity: 0;
            transform: translateX(-20px);
        }

        /* Contenu principal */
        .content {
            margin-left: 250px;
            padding: 20px;
            flex: 1;
            transition: margin-left 0.3s ease;
            margin-top: 56px; /* espace pour la navbar */
        }

        .collapsed .content {
            margin-left: 70px;
        }

        /* Navbar */
        .navbar {
            transition: all 0.3s ease;
        }

        .collapsed .navbar {
            margin-left: 70px;
        }

        /* Autres styles */
        .separator {
            border-top: 2px solid #ffffff;
            margin: 10px 0;
        }

        .sidebar h4 img {
            height: 40px;
        }

        .sidebar h4 span {
            vertical-align: middle;
            margin-left: 10px;
        }

        .form-size {
            font-size: small;
        }

        .btn-primary {
            font-size: small;
            font-weight: bold;
        }

        .custom-bg-pha, .custom-bg-purchase {
            background-color: #ced4da;
        }

        .btn-purchase {
            display: flex;
            justify-content: center;
        }

        .btn-purchase a {
            font-size: 1em;
        }

        .btn-back a, .btn-edit a {
            color: white;
            text-decoration: none;
        }

        @media (max-width: 768px) {
            .btn-primary {
                margin: 5px auto 0;
                display: flex;
                align-items: center;
            }
        }

        /* Scrollbar perso pour sidebar */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }
        .sidebar::-webkit-scrollbar-track {
            background: transparent;
        }
        .sidebar::-webkit-scrollbar-thumb {
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 3px;
        }
    </style>

    {% block stylesheets %}
        <!-- DataTables CSS -->
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css">
    {% endblock %}
</head>
<body>

<!-- Navbar -->
<!-- Navbar -->
<nav class="navbar navbar-dark fixed-top" style="background-color: #0b60b5;">
    <div class="container-fluid d-flex justify-content-between align-items-center">

        <!-- Bouton pour ouvrir la sidebar -->
        <button class="btn btn-outline-light" id="toggleSidebar">
            <i class="bi bi-list"></i>
        </button>

        <div class="d-flex align-items-center">

            <!-- Icône de notification -->
            <div class="dropdown me-3">
                <a class="nav-link text-white" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-bell fs-5"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                    <li><span class="dropdown-item">Aucune notification</span></li>
                </ul>
            </div>

            <!-- Utilisateur connecté -->
            {% if app.user %}
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        {{ app.user.username|default(app.user.username) }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                    </ul>
                </div>
            {% else %}
                <a class="nav-link text-white" href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
        </div>

    </div>
</nav>

<div class="wrapper" id="wrapper">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h4 class="text-center text-white">
            <a href="{{ path('app_homepage') }}">
                <img src="{{ asset('images/logoavemaria.jpeg') }}" alt="Logo">
            </a>
        </h4>
        <div class="separator"></div>
        <a href="{{ path('app_homepage') }}"><i class="bi bi-gear"></i> <span>Admin</span></a>
        <a href="{{ path('app_accueil') }}"><i class="bi bi-house-door"></i> <span>Accueil</span></a>
        <a href="{{ path('app_prisedesparametres_index') }}"><i class="bi bi-heart-pulse"></i> <span>Prise de paramètre</span></a>
        <a href="{{ path('app_facturation_entity_facture_index') }}"><i class="bi-file-earmark-check"></i> <span>Facturation</span></a>
        <a href="{{ path('app_economat_entity_paiement_index') }}"><i class="bi bi-shop-window"></i> <span>Economat</span></a>
        <a href="{{ path('app_consultation_entity_ordonnance_index') }}"><i class="bi bi-calendar-check"></i> <span>Consultation</span></a>
        <a href="{{ path('app_pharmaciehomepage') }}"><i class="bi-capsule"></i> <span>Pharmacie</span></a>
    </div>

    <!-- Contenu -->
    <div class="content" id="mainContent">
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </div>
</div>

</body>
</html>
