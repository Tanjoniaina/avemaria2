{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datefacture</th>
                <th>Estpaye</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.datefacture ? facture.datefacture|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ facture.estpaye ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_facturation_entity_facture_show', {'id': facture.id}) }}">show</a>
                    <a href="{{ path('app_facturation_entity_facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_facturation_entity_facture_new') }}">Create new</a>
{% endblock %}
