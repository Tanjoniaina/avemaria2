{% extends 'base.html.twig' %}

{% block title %}Purchaseorder index{% endblock %}

{% block body %}
    <a href="{{ path('app_pharmaciegros_entity_purchaseorder_new') }}" class="btn btn-primary mb-3">Cr√©er un bon de commande</a>

    <table class="table table-striped table-bordered datatable">
        <thead>
            <tr class="custom-bg-purchase">
                <th>Id</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Reference Number</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchaseorder in purchaseorders %}
            <tr>
                <td class="fw-bold">{{ purchaseorder.id }}</td>
                <td>{{ purchaseorder.orderdate ? purchaseorder.orderdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ purchaseorder.status }}</td>
                <td>{{ purchaseorder.referencenumber }}</td>
                <td>{{ purchaseorder.totalamount }}</td>
                <td>
                    <a href="{{ path('app_pharmaciegros_entity_purchaseorder_show', {'id': purchaseorder.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_pharmaciegros_entity_purchaseorder_edit', {'id': purchaseorder.id}) }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initDataTables();
        });
    </script>
{% endblock %}