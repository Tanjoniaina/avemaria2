{{ form_start(form) }}

<div class="card border-0 shadow-sm p-4">

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_label(form.phone, 'Téléphone', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.isactive, 'Actif', {'label_attr': {'class': 'fw-bold me-2'}}) }}
        {{ form_widget(form.isactive) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.duedate, 'Echéance', {'label_attr': {'class': 'fw-bold me-2'}}) }}
        {{ form_widget(form.duedate) }} jours
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary px-4">Enregistrer</button>
    </div>

</div>

{{ form_end(form) }}
