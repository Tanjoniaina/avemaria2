{% extends 'base.html.twig' %}

{% block title %}Rupture{% endblock %}

{% block body %}
    <h3>En cours de rupture</h3>
    <table class="table table-striped table-bordered datatable">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Categorie</th>
            <th>Prix d'achat</th>
            <th>Stock actuel</th>
            <th>Stock Mini</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for p in products %}
            <tr>
                <td>{{ p.product.name }}</td>
                <td>{{ p.product.category.name }}</td>
                <td>{{ p.product.purchaseprice }}</td>
                <td>{{ p.currentStock }}</td>
                <td>{{ p.minStock }}</td>
                <td>
                    <a href="{{ path('app_pharmaciegros_entity_product_show', {'id': p.product.id}) }}">show</a>
                    <a href="{{ path('app_pharmaciegros_entity_product_edit', {'id': p.product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initDataTables();
        });
    </script>
{% endblock %}