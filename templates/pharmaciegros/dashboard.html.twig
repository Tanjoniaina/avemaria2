{% extends 'base.html.twig' %}

{% block title %}Tableau de bord — Gestion de stock{% endblock %}

{% block body %}
    <div class="row g-3">
        {# Titre et sous-titre #}
        <div class="col-12">
            <h1 class="h4 mb-0">Tableau de bord</h1>
        </div>

        {# Cartes KPI #}
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 display-6"><i class="bi bi-box-seam text-primary" aria-hidden="true"></i></div>
                    <div>
                        <div class="text-muted small">Produits en stock</div>
                        <div class="fs-4 fw-semibold" data-kpi="total-products">1 254</div>
                        <div class="small text-success"><i class="bi bi-arrow-up"></i> +2,1% vs semaine dernière</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 display-6"><i class="bi bi-cash-coin text-success" aria-hidden="true"></i></div>
                    <div>
                        <div class="text-muted small">Facture à payer (MGA)</div>
                        <div class="fs-4 fw-semibold" data-kpi="stock-value">178 450 000</div>
                        <div class="small text-success"><i class="bi bi-arrow-up"></i> +1,3% ce mois</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 display-6"><i class="bi bi-exclamation-triangle text-warning" aria-hidden="true"></i></div>
                    <div>
                        <div class="text-muted small">Sous le stock minimum</div>
                        <div class="fs-4 fw-semibold" data-kpi="below-min">12</div>
                        <div class="small text-muted">À réapprovisionner</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 display-6"><i class="bi bi-calendar-x text-danger" aria-hidden="true"></i></div>
                    <div>
                        <div class="text-muted small">Périme &lt; 30 jours</div>
                        <div class="fs-4 fw-semibold" data-kpi="expiring-soon">5</div>
                        <div class="small text-danger">Vérifier les lots</div>
                    </div>
                </div>
            </div>
        </div>

        {# Alertes #}
        <div class="col-12 col-xl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="fw-semibold"><i class="bi bi-exclamation-octagon text-warning me-1"></i> Alertes — Sous minimum</span>
                        <a href="#" class="small">Voir tout</a>
                    </div>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush" aria-label="Produits sous le minimum">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Paracétamol 500mg (B/100)
                            <span class="badge text-bg-warning">Qté 8 / Min 20</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Amoxicilline 1g
                            <span class="badge text-bg-warning">Qté 12 / Min 30</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Vitamine C 500mg
                            <span class="badge text-bg-warning">Qté 5 / Min 25</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="fw-semibold"><i class="bi bi-hourglass-split text-danger me-1"></i> Alertes — Proche péremption</span>
                        <a href="#" class="small">Voir tout</a>
                    </div>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush" aria-label="Produits proches de la péremption">
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <span>Oméprazole 20mg — Lot #A7F3</span>
                                <span class="badge text-bg-danger">12 jours</span>
                            </div>
                            <div class="progress mt-2" role="progressbar" aria-label="Temps avant péremption" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar bg-danger" style="width:85%"></div>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Ibuprofène 400mg — Lot #B9K2
                            <span class="badge text-bg-danger">22 jours</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        {# Actions rapides #}
        <div class="col-12 col-xl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-semibold"><i class="bi bi-lightning-charge text-primary me-1"></i> Actions rapides</div>
                <div class="card-body d-grid gap-2">
                    <a class="btn btn-primary" href="#"><i class="bi bi-plus-circle me-1"></i> Ajouter un produit</a>
                    <a class="btn btn-outline-primary" href="#"><i class="bi bi-arrow-down-up me-1"></i> Mouvements de stock</a>
                    <a class="btn btn-outline-secondary" href="#"><i class="bi bi-truck me-1"></i> Créer une commande fournisseur</a>
                    <a class="btn btn-outline-secondary" href="#"><i class="bi bi-gear me-1"></i> Configurer stock minimum</a>
                </div>
            </div>
        </div>

        {# Graphiques #}
        <div class="col-12 col-xxl-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex align-items-center justify-content-between">
                    <span class="fw-semibold"><i class="bi bi-bar-chart-line me-1 text-primary"></i> Ventes (14 derniers jours)</span>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Plage de ventes">
                        <button type="button" class="btn btn-outline-secondary active">14j</button>
                        <button type="button" class="btn btn-outline-secondary">30j</button>
                        <button type="button" class="btn btn-outline-secondary">90j</button>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="salesChart" height="120" aria-label="Graphique des ventes" role="img"></canvas>
                </div>
            </div>
        </div>
        <div class="col-12 col-xxl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-semibold"><i class="bi bi-pie-chart me-1 text-success"></i> Stock par catégorie</div>
                <div class="card-body">
                    <canvas id="categoryChart" height="220" aria-label="Graphique stock par catégorie" role="img"></canvas>
                </div>
            </div>
        </div>

        {# Activité récente #}
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex align-items-center justify-content-between">
                    <span class="fw-semibold"><i class="bi bi-activity me-1 text-primary"></i> Activité récente</span>
                    <a href="#" class="small">Voir tout</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" aria-label="Table activité récente">
                        <thead class="table-light">
                        <tr>
                            <th scope="col">Quand</th>
                            <th scope="col">Type</th>
                            <th scope="col">Article</th>
                            <th scope="col">Qté</th>
                            <th scope="col">Utilisateur</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Aujourd'hui 10:21</td>
                            <td><span class="badge text-bg-success">Vente</span></td>
                            <td>Paracétamol 500mg</td>
                            <td>3</td>
                            <td>admin</td>
                        </tr>
                        <tr>
                            <td>Hier 16:02</td>
                            <td><span class="badge text-bg-primary">Achat</span></td>
                            <td>Amoxicilline 1g</td>
                            <td>100</td>
                            <td>acheteur</td>
                        </tr>
                        <tr>
                            <td>10 août</td>
                            <td><span class="badge text-bg-warning">Ajustement</span></td>
                            <td>Vitamine C 500mg</td>
                            <td>-2</td>
                            <td>gestionnaire</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-white text-end">
                    <a class="btn btn-sm btn-outline-secondary" href="#"><i class="bi bi-download me-1"></i> Exporter CSV</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        /* --- Charts bootstrap with static demo data ---
         * Replace datasets with your Twig variables:
         *  - For labels: use {# {{ labels|json_encode|raw }} #}
 *  - For data: use {# {{ data|json_encode|raw }} #}
 */

        document.addEventListener('DOMContentLoaded', function () {
            // Sales line chart (last 14 days)
            const salesCtx = document.getElementById('salesChart');
            if (salesCtx) {
                // Example labels and data
                const labels = ['D-13','D-12','D-11','D-10','D-9','D-8','D-7','D-6','D-5','D-4','D-3','D-2','D-1','Today'];
                const data = [12, 9, 11, 15, 14, 8, 10, 20, 18, 24, 22, 19, 21, 25];

                new Chart(salesCtx, {
                    type: 'line',
                    data: {
                        labels,
                        datasets: [{
                            label: 'Sales (qty)',
                            data,
                            tension: 0.35,
                            fill: true,
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: true },
                            tooltip: { mode: 'index', intersect: false }
                        },
                        interaction: { mode: 'nearest', intersect: false },
                        scales: {
                            x: { grid: { display: false } },
                            y: { beginAtZero: true }
                        }
                    }
                });
            }

            // Category doughnut chart
            const catCtx = document.getElementById('categoryChart');
            if (catCtx) {
                const labels = ['Antibiotics', 'Analgesics', 'Vitamins', 'Others'];
                const data = [320, 210, 150, 90];

                new Chart(catCtx, {
                    type: 'doughnut',
                    data: {
                        labels,
                        datasets: [{
                            label: 'Stock (qty)',
                            data
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' }
                        },
                        cutout: '60%'
                    }
                });
            }
        });
    </script>
{% endblock %}