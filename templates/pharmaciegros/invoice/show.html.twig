{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Invoicenumber</th>
                <td>{{ invoice.invoicenumber }}</td>
            </tr>
            <tr>
                <th>Invoicedate</th>
                <td>{{ invoice.invoicedate ? invoice.invoicedate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duedate</th>
                <td>{{ invoice.duedate ? invoice.duedate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ invoice.amount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ invoice.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pharmaciegros_entity_invoice_index') }}">back to list</a>

    <a href="{{ path('app_pharmaciegros_entity_payment_new', {'invoice': invoice.id}) }}">Payer</a>

    {{ include('pharmaciegros/invoice/_delete_form.html.twig') }}
{% endblock %}
