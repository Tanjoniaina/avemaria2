{% extends 'base.html.twig' %}

{% block title %}New Ordonnance{% endblock %}

{%  form_theme form _self %}

{% block body %}
    <h1>Create new Ordonnance</h1>

    {{ include('consultation/ordonnance/_form.html.twig') }}
{% endblock %}

{% block _ordonnance_form_ligne_widget %}

    <p>Ici, ajouter les medicament</p>
    {{ form_widget(form) }}
    <input type="hidden" id="widget-counter" value="0">
    <div class="form-group">
        <button type="button" id="add-medicament" class="btn btn-primary">Ajouter</button>
    </div>

{% endblock %}

{% block _ordonnance_form_ligneanalyse_widget %}

    <p>Ici, ajouter les analyses</p>
    {{ form_widget(form) }}
    <input type="hidden" id="widget-counter-analyse" value="0">
    <div class="form-group">
        <button type="button" id="add-analyse" class="btn btn-primary">Ajouter</button>
    </div>

{% endblock %}


{% block _ordonnance_form_ligne_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ordonnance_form_ligneanalyse_entry_row %}
    {{ form_widget(form) }}
{% endblock %}


{% block _ordonnance_form_ligne_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-4">{{ form_widget(form.medicament) }}</div>
                    <div class="col-4">{{ form_widget(form.quantite) }}</div>
                    <div class="col-4">{{ form_widget(form.posologie) }}</div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }} " class="btn btn-danger">X</button>
            </div>
        </div>

    </div>
{% endblock %}

{% block _ordonnance_form_ligneanalyse_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-4">{{ form_widget(form.typeanalyse) }}</div>
                    <div class="col-4">{{ form_widget(form.montant) }}</div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }} " class="btn btn-danger">X</button>
            </div>
        </div>

    </div>
{% endblock %}

{%  block javascripts  %}
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script>
        $('#add-medicament').click(function (){

            const index = +$('#widget-counter').val();
            const tmpl = $('#ordonnance_form_ligne').data('prototype').replace(/__name__/g,index);
            $('#ordonnance_form_ligne').append(tmpl);
            $('#widget-counter').val(index + 1);
            handleDeleteButtons();
        });

        function handleDeleteButtons(){
            $('button[data-action="delete"]').click(function () {
                const target = this.dataset.target;
                $(target).remove();
            });
        }
        handleDeleteButtons()
    </script>

    <script>
        $('#add-analyse').click(function (){

            const index = +$('#widget-counter-analyse').val();
            const tmpl = $('#ordonnance_form_ligneanalyse').data('prototype').replace(/__name__/g,index);
            $('#ordonnance_form_ligneanalyse').append(tmpl);
            $('#widget-counter-analyse').val(index + 1);
            handleDeleteButtons1();
        });

        function handleDeleteButtons1(){
            $('button[data-action="delete"]').click(function () {
                const target = this.dataset.target;
                $(target).remove();
            });
        }
        handleDeleteButtons1()
    </script>
    <script>
        $(document).ready(function () {
            function updateMontant(select) {
                const $select = $(select);
                const prix = $select.find('option:selected').data('prix');

                // Ex : id = facture_form_ligne_0_tarifActe
                const id = $select.attr('id');
                const ligneIndex = id.match(/\d+/)[0]; // récupère 0, 1, 2…

                const $montantInput = $('#ordonnance_form_ligneanalyse_' + ligneIndex + '_montant');

                if (prix !== undefined && $montantInput.length) {
                    $montantInput.val(prix);
                }
            }

            // Pour toutes les lignes existantes au chargement
            $('[id^="ordonnance_form_ligneanalyse_"][id$="_typeanalyse"]').each(function () {
                updateMontant(this); // met à jour dès le départ si besoin
            });

            // Lorsqu’on change un tarifActe
            $(document).on('change', '[id^="ordonnance_form_ligneanalyse_"][id$="_typeanalyse"]', function () {
                updateMontant(this);
            });
        });

    </script>
{% endblock %}