{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <h1>Invoice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Invoicenumber</th>
                <th>Invoicedate</th>
                <th>Duedate</th>
                <th>Amount</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.invoicenumber }}</td>
                <td>{{ invoice.invoicedate ? invoice.invoicedate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ invoice.duedate ? invoice.duedate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ invoice.amount }}</td>
                <td>{{ invoice.status }}</td>
                <td>
                    <a href="{{ path('app_pharmaciegros_entity_invoice_show', {'id': invoice.id}) }}">show</a>
                    <a href="{{ path('app_pharmaciegros_entity_invoice_edit', {'id': invoice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pharmaciegros_entity_invoice_new') }}">Create new</a>
{% endblock %}
