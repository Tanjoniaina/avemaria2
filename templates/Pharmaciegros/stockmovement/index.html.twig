{% extends 'base.html.twig' %}

{% block title %}Stockmovement index{% endblock %}

{% block body %}
    <h1>Stockmovement index</h1>

    <table class="table table-striped table-bordered datatable">
        <thead>
            <tr>
                <th>Movementdate</th>
                <th>Produit</th>
                <th>Quantity</th>
                <th>Type</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stockmovement in stockmovements %}
            <tr>
                <td>{{ stockmovement.movementdate ? stockmovement.movementdate|date('d/m/Y') : '' }}</td>
                <td>{{ stockmovement.product.name }}</td>
                <td>{{ stockmovement.quantity }}</td>
                <td>{{ stockmovement.type }}</td>

                <td>
                    <a href="{{ path('app_pharmaciegros_entity_stockmovement_show', {'id': stockmovement.id}) }}">show</a>
                    <a href="{{ path('app_pharmaciegros_entity_stockmovement_edit', {'id': stockmovement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pharmaciegros_entity_stockmovement_new') }}">Create new</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initDataTables();
        });
    </script>
{% endblock %}