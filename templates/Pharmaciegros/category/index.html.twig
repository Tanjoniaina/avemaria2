{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <a href="{{ path('app_pharmaciegros_entity_category_new') }}" class="btn btn-primary mb-3">Ajouter une cat√©gorie</a>

    <table class="table table-striped table-bordered datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_pharmaciegros_entity_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_pharmaciegros_entity_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initDataTables();
        });
    </script>
{% endblock %}