{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}


{% block body %}

    <a href="{{ path('app_pharmaciegros_entity_product_new') }}" class="btn btn-primary mb-3">Ajouter un produit</a>

    <!-- Onglets catégories -->
    <ul class="nav nav-tabs" id="productTabs" role="tablist">
        {% for category in categories %}
            <li class="nav-item" role="presentation">
                <button class="nav-link {% if loop.first %}active{% endif %}"
                        id="{{ category.name | slug }}-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#{{ category.name | slug }}"
                        type="button"
                        role="tab">
                    {{ category.name }}
                </button>
            </li>
        {% endfor %}
    </ul>

    <div class="tab-content mt-3" id="productTabsContent">
        {% for category in categories %}
            <div class="tab-pane fade {% if loop.first %}show active{% endif %}"
                 id="{{ category.name | slug }}"
                 role="tabpanel">
                <h5 class="mt-3">{{ category.name }}</h5>

                {% if category.products|length > 0 %}
                    <table class="table table-striped table-bordered datatable" id="table-{{ category.name | slug }}">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Code</th>
                            <th>Stock</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in category.products %}
                            <tr>
                                <td>{{ product.name }}</td>
                                <td>{{ product.code }}</td>
                                <td>{{ product.stockAtPharmacy }}</td>
                                <td>
                                    <a href="{{ path('app_pharmaciegros_entity_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-primary">
                                        Modifier
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-info mt-3">Aucun produit dans cette catégorie.</div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initDataTables();
        });
    </script>
{% endblock %}